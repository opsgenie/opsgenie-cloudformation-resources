{
  "typeName": "Atlassian::Opsgenie::Team",
  "description": "Opsgenie Team resource schema",
  "sourceUrl": "https://github.com/opsgenie/opsgenie-cloudformation-resources",
  "typeConfiguration": {
    "properties": {
      "OpsgenieCredentials": {
        "$ref": "#/definitions/OpsgenieCredentials"
      }
    },
    "additionalProperties": false
  },
  "definitions": {
    "Member": {
      "type": "object",
      "dependencies": {
        "UserId": [
          "Role"
        ],
        "Role": [
          "UserId"
        ]
      },
      "properties": {
        "UserId": {
          "type": "string",
          "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
        },
        "Role": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9-_.]+$"
        }
      },
      "additionalProperties": false
    },
    "OpsgenieCredentials": {
      "description": "Credentials for the Opsgenie API",
      "properties": {
        "OpsgenieApiEndpoint": {
          "type": "string",
          "pattern": "^https:\/\/api(\\.eu|\\.sandbox|)\\.opsgenie\\.com$"
        },
        "OpsgenieApiKey": {
          "type": "string",
          "pattern": "^([a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12})|\\{\\{resolve:.*:[a-zA-Z0-9_.-/]+\\}\\}$"
        }
      },
      "type": "object",
      "additionalProperties": false
    }
  },
  "properties": {
    "TeamId": {
      "description": "Team id",
      "type": "string",
      "pattern": "[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}"
    },
    "Name": {
      "description": "Team name",
      "type": "string",
      "pattern": "^[a-zA-Z0-9- _.]+$"
    },
    "Description": {
      "description": "Team description",
      "type": "string",
      "pattern": "^[a-zA-Z0-9- _.]+$"
    },
    "Members": {
      "description": "Array of members",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Member"
      }
    }
  },
  "required": [
    "Name"
  ],
  "primaryIdentifier": [
    "/properties/TeamId"
  ],
  "readOnlyProperties": [
    "/properties/TeamId"
  ],
  "handlers": {
    "create": {
      "permissions": [
        ""
      ]
    },
    "read": {
      "permissions": [
        ""
      ]
    },
    "update": {
      "permissions": [
        ""
      ]
    },
    "delete": {
      "permissions": [
        ""
      ]
    },
    "list": {
      "permissions": [
        ""
      ]
    }
  },
  "additionalProperties": false
}
